    <PackageId>SimpleIdentityServer.EF.Postgre</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SimpleIdentityServer.EF\SimpleIdentityServer.EF.csproj" />
  </ItemGroup>
  
  <ItemGroup>
